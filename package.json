{
  "name": "avclient-livekit",
  "description": "LiveKit A/V module for FoundryVTT",
  "private": true,
  "repository": "https://github.com/bekriebel/fvtt-module-avclient-livekit",
  "author": "Brint E. Kriebel <fvtt-module-help@bekit.net>",
  "license": "Hippocratic-2.1",
  "scripts": {
    "watch": "webpack --watch --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "build:dev": "webpack --config webpack.dev.js",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "validate": "node scripts/validate-manifest.mjs module.json",
    "clean": "rm -rf dist",
    "ci": "npm run lint && npm run build",
    "prepare": "npm run build"
  },
  "browserslist": [
    "defaults"
  ],
  "dependencies": {
    "jose": "^6.0.11",
    "livekit-client": "^2.13.8"
  },
  "devDependencies": {
    "@league-of-foundry-developers/foundry-vtt-types": "https://github.com/League-of-Foundry-Developers/foundry-vtt-types.git",
    "@types/jsonwebtoken": "^9.0.10",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "buffer": "^6.0.3",
    "copy-webpack-plugin": "^13.0.0",
    "crypto-browserify": "^3.12.1",
    "eslint": "^9.29.0",
    "process": "^0.11.10",
    "source-map-loader": "^5.0.0",
    "stream-browserify": "^3.0.0",
    "terser-webpack-plugin": "^5.3.14",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "util": "^0.12.5",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-merge": "^6.0.1"
  }
}
